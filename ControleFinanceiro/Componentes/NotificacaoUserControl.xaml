<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="ControleFinanceiro.Componentes.NotificacaoUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControleFinanceiro.Componentes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="gPrincipal"
          Padding="8"
          ColumnSpacing="8"
          CornerRadius="0,4,0,8"
          BorderBrush="{StaticResource Vermelho3}"
          BorderThickness="6,0,0,1"
          Background="{StaticResource Cinza11Transp20}"
          VerticalAlignment="Bottom"
          HorizontalAlignment="Right">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="258"/>
            <ColumnDefinition Width="34"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="MessageText"                 
                   MaxWidth="258"
                   TextWrapping="Wrap"
                   Grid.Column="0"
                   Text="Mensagem"
                   Foreground="{StaticResource Branco}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"/>

        <Button Grid.Column="1"
                Height="34"
                Width="34"
                Padding="0"
                Style="{StaticResource DefaultButtonStyle}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderThickness="0"
                Click="Close_Click">
            <FontIcon Glyph="&#xE8BB;" FontSize="12"/>
        </Button>
    </Grid>
</UserControl>
