<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ControleFinanceiro.Telas.CategoriaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControleFinanceiro.Telas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Grid Background="{StaticResource Cinza10}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="1" Grid.Row="0" Padding="16,16,16,0" RowSpacing="16" Margin="0,8,0,0" 
                  CornerRadius="8,8,0,0" Background="{StaticResource Cinza9Transp10}" 
                  BorderThickness="1" BorderBrush="{StaticResource Cinza11}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel x:Name="spNome" Grid.Row="0" Spacing="8">
                    <TextBlock x:Name="txtTitulo" Text="Categoria:" FontSize="16" Foreground="{StaticResource Cinza2}" FontWeight="Bold"/>
                    <TextBox x:Name="txtNome" Text="{Binding Nome, Mode=TwoWay}" IsEnabled="{Binding HabilitarNome}" MaxLength="30"/>
                </StackPanel>

                <StackPanel x:Name="spBotoes" Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="btnDeletar" Height="34" Width="34" Padding="0" Margin="0" Click="btnDeletar_Click" Visibility="{Binding ExibeBotoesCrud}" IsEnabled="{Binding HabilitaBotaoEditarExcluir}">
                        <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                    </Button>
                    <Button x:Name="btnEditar" Height="34" Width="34" Padding="0" Margin="0" Click="btnEditar_Click" Visibility="{Binding ExibeBotoesCrud}" IsEnabled="{Binding HabilitaBotaoEditarExcluir}">
                        <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                    </Button>
                    <Button x:Name="btnAdicionar" Height="34" Width="34" Padding="0" Margin="0" Style="{StaticResource AccentButtonStyle}" Click="btnAdicionar_Click" Visibility="{Binding ExibeBotoesCrud}">
                        <FontIcon Glyph="&#xE710;" FontSize="16"/>
                    </Button>
                    <Button x:Name="btnCancelar" Height="34" Width="34" Padding="0" Margin="0" Click="btnCancelar_Click" Visibility="{Binding ExibeBotoesConfirmacao}">
                        <FontIcon Glyph="&#xE711;" FontSize="16"/>
                    </Button>
                    <Button x:Name="btnSalvar" Height="34" Width="34" Padding="0" Margin="0" Style="{StaticResource AccentButtonStyle}" Click="btnSalvar_Click" Visibility="{Binding ExibeBotoesConfirmacao}">
                        <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                    </Button>
                </StackPanel>

                <Grid Grid.Row="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- CabeÃ§alho -->
                    <Grid  Grid.Row="0" Style="{StaticResource GridCabecalho}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="16"/>
                            <ColumnDefinition Width="76"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="1" Style="{StaticResource BorderCelulaComSeparador}">
                            <TextBlock Text="ID" Style="{StaticResource TextBlockCabecalho}"/>
                        </Border>

                        <TextBlock Grid.Column="2" Text="Categoria" Style="{StaticResource TextBlockCabecalho}"/>
                    </Grid>
                    
                    <!-- Linhas -->
                    <ListView x:Name="lstPrincipal" Grid.Row="1" Style="{StaticResource ListViewDataGrid}" SelectionChanged="lstPrincipal_SelectionChanged">

                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <Grid Style="{StaticResource GridLinha}">
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource BorderCelulaComSeparador}">
                                        <TextBlock Text="{Binding PK_Categoria}" Style="{StaticResource TextBlockDadoCentralizado}"/>
                                    </Border>

                                    <TextBlock Grid.Column="1" Text="{Binding Nome}" Style="{StaticResource TextBlockDadoLinha}"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                </Grid>

            </Grid>

            <Frame Grid.Row="2" Grid.Column="1" Background="{StaticResource Cinza11}" CornerRadius="0,0,8,8" Margin="0,0,0,8" MinHeight="32" Padding="16,0">
                <TextBlock Text="{Binding Total}" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource Cinza3}" FontSize="10"/>
            </Frame>
        </Grid>
    </Grid>
</Page>
