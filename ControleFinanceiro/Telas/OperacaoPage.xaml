<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ControleFinanceiro.Telas.OperacaoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ControleFinanceiro.Telas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Cinza10}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0- Resumo entrada/saída -->
            <RowDefinition Height="Auto"/>
            <!-- 1- Pesquisa/Filtros -->
            <RowDefinition Height="*"/>
            <!-- 2- Operações -->
            <RowDefinition Height="32"/>
            <!-- 3- Rodapé -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="100*" MaxWidth="1100"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <!-- 1- Pesquisa/Filtros -->
        <Grid x:Name="gPesquisa" Background="{StaticResource Cinza11}"
              Padding="8"
              Grid.Row="1"
              Grid.Column="1"
              ColumnSpacing="24" 
              HorizontalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                
                <StackPanel Spacing="2" VerticalAlignment="Stretch">
                    <TextBlock Text="Data Inicial" FontSize="12" Foreground="{StaticResource Cinza2}"/>
                    <CalendarDatePicker x:Name="cdpDataInicial" PlaceholderText="" Width="120"/>
                </StackPanel>
                
                <StackPanel Spacing="2" VerticalAlignment="Stretch">
                    <TextBlock Text="Data Final" FontSize="12" Foreground="{StaticResource Cinza2}"/>
                    <CalendarDatePicker x:Name="cdpDataFinal" PlaceholderText="" Width="120"/>
                </StackPanel>
                
                <Button x:Name="btnPesquisar" 
                        Height="32" Width="32" 
                        Padding="0" Margin="0" 
                        Click="btnPesquisar_Click"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource DefaultButtonStyle}">
                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                </Button>
                
            </StackPanel>
            
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <Button x:Name="btnExcluir" 
                        Height="34" Width="34" 
                        Padding="0" Margin="0" 
                        Style="{StaticResource AlternateCloseButtonStyle}"
                        Click="btnExcluir_Click">
                    <FontIcon Glyph="&#xE74D;" FontSize="16"/>
                </Button>
                
                <Button x:Name="btnEditar" 
                        Height="34" Width="34" 
                        Padding="0" Margin="0" 
                        Style="{StaticResource AlternateCloseButtonStyle}"
                        Click="btnEditar_Click">
                    <FontIcon Glyph="&#xE70F;" FontSize="16"/>
                </Button>
                
                <Button x:Name="btnAdicionar" 
                        Height="34" Width="34" 
                        Padding="0" Margin="0" 
                        Style="{StaticResource AccentButtonStyle}"
                        Click="btnAdicionar_Click">
                    <FontIcon Glyph="&#xE710;" FontSize="16"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 2- Operações -->
        <controls:DataGrid  x:Name="dtgPrincipal"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,16,0,0"
                            Background="{StaticResource Cinza10Transp50}"
                            AutoGenerateColumns="False"
                            CanUserSortColumns="True"
                            CanUserResizeColumns="True"
                            IsReadOnly="True"
                            SelectionMode="Single"
                            HeadersVisibility="Column"
                            RowDetailsVisibilityMode="Collapsed"
                            SelectionChanged="dtgPrincipal_SelectionChanged"
                            GridLinesVisibility="All">
            
            <controls:DataGrid.Columns>
                <controls:DataGridTextColumn x:Name="colPK_OperacaoFinanceira" Visibility="Collapsed" Header="PK_OperacaoFinanceira" Binding="{Binding PK_OperacaoFinanceira}" Width="1"/>
                <controls:DataGridTextColumn x:Name="colCategoria" Header="Categoria" Binding="{Binding Categoria}" Width="*" MinWidth="110" MaxWidth="200">
                    <controls:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                        </Style>
                    </controls:DataGridTextColumn.ElementStyle>
                </controls:DataGridTextColumn>
                
            <controls:DataGridTextColumn x:Name="colEntidadeFinanceira" Header="Entidade Financeira" Binding="{Binding EntidadeFinanceira}" Width="*" MinWidth="100"/>
                <controls:DataGridTextColumn x:Name="colVencimento" Header="Vencimento" Binding="{Binding DataVencimentoFormatado}" Width="110"/>
                <controls:DataGridTextColumn x:Name="colTransacao" Header="Transação" Binding="{Binding DataTransacaoFormatado}" Width="110"/>
                
                <controls:DataGridTextColumn x:Name="colValor" CanUserReorder="True" Header="Valor" Binding="{Binding Valor}" CanUserSort="True" Width="*">
                    <controls:DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Margin" Value="0,0,8,0"/>
                        </Style>
                    </controls:DataGridTextColumn.ElementStyle>
                </controls:DataGridTextColumn>
            </controls:DataGrid.Columns>

        </controls:DataGrid>
                
    </Grid>
</Page>
